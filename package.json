{
    "name": "@nodescript/invoke-service",
    "version": "1.1.1",
    "description": "Invokes NodeScript modules on request",
    "type": "module",
    "sideEffects": false,
    "exports": {
        ".": "./out/main/index.js"
    },
    "main": "out/main/index.js",
    "types": "out/main/index.d.ts",
    "files": [
        "out/main/**/*",
        "out/bin/**/*"
    ],
    "scripts": {
        "clean": "rm -rf out *.tsbuildinfo",
        "dev": "npm run clean && tsc -b -w",
        "compile": "npm run clean && tsc -b",
        "lint": "eslint --ext=.js,.ts,.vue --cache .",
        "test": "NODE_ENV=test mocha",
        "version": "npm run compile",
        "postversion": "git push --tags origin main"
    },
    "pre-commit": [
        "lint"
    ],
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/nodescriptlang/invoke-service.git"
    },
    "keywords": [],
    "author": "Boris Okunskiy",
    "license": "ISC",
    "devDependencies": {
        "@nodescript/eslint-config": "^1.0.3",
        "@types/mocha": "^8.2.3",
        "@types/node": "^18.13.0",
        "dotenv": "^16.4.5",
        "eslint": "^8.24.0",
        "mocha": "^9.0.2",
        "pre-commit": "^1.2.2",
        "typescript": "^4.9.5"
    },
    "dependencies": {
        "@nodescript/core": "^7.15.2",
        "@nodescript/errors": "^1.1.4",
        "@nodescript/http-server": "^2.2.0",
        "@nodescript/logger": "^2.0.4",
        "@nodescript/metrics": "^1.2.0",
        "@nodescript/microframework": "^1.7.3",
        "mesh-config": "^1.1.0",
        "mesh-ioc": "^3.2.0"
    }
}
